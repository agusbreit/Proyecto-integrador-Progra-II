<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->

<%-include('./partials/head.ejs', {titulo:'Iniciar Sesión - The Fantasy'})%>

<body>
	<!-- Header -->
	<% if (locals.user) { %> 
		<%- include('partials/headerLogueado') %>
	<% } else { %>
		<%- include('partials/header') %>
	<% } %>  

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Ingresar</h2>
			</div>
			<div class="col-11">
					<% if (locals.errores) {%> 
						<%= errores.message  %>  <!-- agregarle una clase para css -->
					<% } %> 
			</div>
			</div>
			<section class="form-register">
				<form action="/users/login" method="POST">
					<div><input class="form-input" type="text" name="email" value="" placeholder="Email"></div>
					<div><input class="form-input" type="password" name="contrasena" value="" placeholder="Contraseña"></div>
					<div><input class="checkbox" type="checkbox" name="checkbox" value="" placeholder="recordarme"> <div class="recordarme">Recordarme</div>  </div>
					<button type="submit">Ingresar</button>
				  </form>
			</section>

			
			<!-- footer -->
			<%-include('./partials/footer.ejs')%>
			<!-- /footer -->
</body>

</html>