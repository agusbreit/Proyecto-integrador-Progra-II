<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%-include('./partials/head.ejs', {titulo:'Registrate - The Fantasy'})%>

<body>
	<!-- Header -->
	<% if (locals.user) { %> 
		<%- include('partials/headerLogueado') %>
	<% } else { %>
		<%- include('partials/header') %>
	<% } %>  
	<!-- /Header -->

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Registrate</h2>
			</div>
			<div class="col-11">
			<% if (locals.errores) {%> 
				<%= errores.message  %>  
			<% } %> 
			</div>
			<br>
			<br>
			<section class="form-register">
				<form action="/users/store" method="post" enctype="multipart/form-data">
					<input class="form-input1" type="email" name="email" id="nombres" placeholder="Ingrese su email">
					<input class="form-input1" type="text" name="nombreUsuario" id="nombres" placeholder="Ingrese su usuario">
					<input class="form-input1" type="password" name="contrasena" id="nombres" placeholder="Ingrese su ContraseÃ±a">
					<input class="form-input1" type="date" name="nacimiento" id="nombres" placeholder="Ingrese su fecha de nacimiento">
					<input class="form-input1" type="number" name="documento" id="nombres" placeholder="Ingrese su documento">
					<input class="form-input1" type="file" name="imagen" id="nombres" placeholder="Foto de perfil">
					<p>Estoy de acuerdo con <a href="/users/register"> Terminos y condiciones</a></p>
					<button type="submit">Registrarme</button>
				</form>
			</section>

			<!-- footer -->
			<%-include('./partials/footer.ejs')%>
			<!-- /footer -->
</body>

</html>