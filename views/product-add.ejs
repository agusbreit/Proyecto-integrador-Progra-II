<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->

<%-include('./partials/head.ejs', {titulo:'Agregar producto - The Fantasy'})%>

<body>
	<!-- Header -->
	<% if (locals.user) { %> 
		<%- include('partials/headerLogueado') %>
	<% } else { %>
		<%- include('partials/header') %>
	<% } %>  
	<!-- /Header -->

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Agregar productos</h2>
			</div>
			<!-- Show the "ultimos" products -->
			<section class="form-register">
				<form method="post" name="form-register">
					<input class="form-input" type="text" name="nombre" placeholder="Nombre del producto">
					<input class="form-input" type="text" name="descripcion" placeholder="Descripcion">
					<input class="form-input" type="file" name="imagen" placeholder="Ingrese imagen de producto"
						value="Ingrese Imagen">
					<button type="submit" class="btn mt-3 ml-4">POSTEAR PRODUCTO</button>
				</form>
			</section>

			<!-- footer -->
			<%-include('./partials/footer.ejs')%>
			<!-- /footer -->
</body>

</html>