<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->


<%-include('./partials/head', {titulo:'The Fantasy Candy Bar'})%>

<body>
	<!-- Header-->

	<% if (locals.user) { %> 
		<%- include('partials/headerLogueado') %>
	<% } else { %>
		<%- include('partials/header') %>
	<% } %>  

	<!-- Header -->

	<!-- Banner -->
	<div class="banner">
		<img src="images/img-home-banner.jpg" alt="Banner de ofertas">
	</div>
	<!-- /Banner -->

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Novedades</h2>
			</div>
			<!-- Show the "ultimos" products -->

			<% for ( let i=0 ; i < productos.length; i++) { %>
			<div class="col-12 col-sm-6 col-lg-3">
				<section class="product-box">
						<figure class="product-box_image">
							<img src= "/images/products/<%=productos[i].imagen %> " alt="foto producto">
						</figure>
						<article class="product-box_data">
							<h2 class="producto"> <a href="/product/<%= productos[i].nombre %> "><%= productos[i].nombre %> </h2> </a>
							<p> <%= productos[i].descripcion%> </p>
							<p class="link"> <a href="/users/profile/<%= productos[i].usuario.id %> "> Subido por <%= productos[i].usuario.nombreUsuario %> </p> </a>
							
				<!--HAY QUE PONER??			<p>Comentarios: 12</p>  -->
						</article>
					
				</section>
			</div>
			<% } %>
			

					<!-- footer -->
					<%-include('./partials/footer.ejs')%>
					<!-- /footer -->
</body>

</html>